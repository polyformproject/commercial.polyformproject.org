{
  "private": true,
  "devDependencies": {
    "ajv": "^7.2.1",
    "browserify": "^17.0.0",
    "commonform-commonmark": "^6.0.0",
    "commonform-docx": "^5.4.0",
    "exorcist": "^2.0.0",
    "file-saver": "^2.0.5",
    "js-yaml": "^4.0.0",
    "jszip": "^3.6.0",
    "mustache": "^4.1.0",
    "mustache-vars": "^0.2.0",
    "ooxml-signature-pages": "^3.0.2",
    "outline-numbering": "^2.0.0",
    "standard": "^16.0.3",
    "tape": "^5.2.2"
  },
  "scripts": {
    "lint": "standard index.js",
    "fix": "standard --fix",
    "build": "npm run build:prompts ; npm run build:terms ; npm run build:order ; npm run build:bundle ; npm run build:compressed",
    "build:bundle": "browserify -d index.js | exorcist bundle.map.js > bundle.js ; du -h bundle.js",
    "build:compressed": "gzip -k -f bundle.js ; du -h bundle.js.gz",
    "build:prompts": "js-yaml < prompts.yml > prompts.json",
    "build:terms": "./texttojson terms.md",
    "build:order": "./texttojson order.md",
    "test": "npm run build:prompts && node test.js"
  }
}
