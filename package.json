{
  "private": true,
  "devDependencies": {
    "ajv": "^7.2.1",
    "esbuild": "^0.9.0",
    "js-yaml": "^4.0.0"
  },
  "scripts": {
    "build": "npm run build:choices ; npm run build:bundle",
    "build:bundle": "esbuild index.js --bundle --sourcemap --outfile=bundle.js",
    "build:choices": "echo 'module.exports = ' >> choices.js ; js-yaml < choices.yml >> choices.js",
    "test": "npm run build:choices && node test.js"
  }
}
