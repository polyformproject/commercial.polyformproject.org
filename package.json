{
  "private": true,
  "devDependencies": {
    "ajv": "^7.2.1",
    "esbuild": "^0.9.0",
    "js-yaml": "^4.0.0"
  },
  "scripts": {
    "build": "npm run build:prompts ; npm run build:bundle",
    "build:bundle": "esbuild index.js --bundle --sourcemap --outfile=bundle.js",
    "build:prompts": "echo 'module.exports = ' >> prompts.js ; js-yaml < prompts.yml >> prompts.js",
    "test": "npm run build:prompts && node test.js"
  }
}
